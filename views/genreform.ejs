<h2>New Genre</h2>
<div class="col">

  <% if (errors.length> 0) { %>
    <ul class="alert alert-danger">
      <% errors.forEach(error=> { %>
        <li>
          <%= error.msg %>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <form hx-post="/catalog/genre/create">
    <div class="form-group mb-3">
      <label class="form-label" for="name">Genre:</label>
      <input id="name" class="form-control" type="text" name="name" value="<%= genre ? genre.name : '' %>"
        placeholder="Fantasy, Poetry, etc." />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>

</div>
